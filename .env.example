# === 필수 설정 ===
TELEGRAM_BOT_TOKEN=          # @BotFather에서 발급
ANTHROPIC_API_KEY=            # Anthropic 콘솔에서 발급

# === 선택 설정 ===
BOT_NAME=PhoneClaw            # 봇 표시 이름 (트리거 패턴에 사용)
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_BASE_URL=           # 대체 API 호환 엔드포인트 (비워두면 공식 API)
ADMIN_USER_IDS=               # 쉼표 구분 Telegram user ID (관리자 명령어용)
LOG_LEVEL=info                # trace, debug, info, warn, error, fatal
AGENT_TIMEOUT=300000          # Agent 실행 제한 시간 (ms, 기본 5분)
MAX_CONCURRENT_AGENTS=1       # 동시 실행 Agent 수 (proot 환경은 1 권장)
TZ=Asia/Seoul                 # 스케줄러 타임존

# === 메모리 설정 ===
MEMORY_RECENT_DAYS=2          # 최근 일지 로드 일수
MEMORY_MAX_DAILY_LOG_KB=8     # 일일 로그 최대 크기 (KB)
MEMORY_MAX_LONGTERM_KB=16     # 장기 기억 최대 크기 (KB)

# === 하트비트 설정 ===
HEARTBEAT_ENABLED=false       # 하트비트 활성화
HEARTBEAT_INTERVAL=1800000    # 하트비트 간격 (ms, 기본 30분)
HEARTBEAT_ACTIVE_START=8      # 활성 시작 시간 (0-23)
HEARTBEAT_ACTIVE_END=22       # 활성 종료 시간 (0-23)

# === 웹훅 설정 ===
WEBHOOK_ENABLED=false         # 웹훅 서버 활성화
WEBHOOK_PORT=3456             # 웹훅 서버 포트
WEBHOOK_TOKEN=                # Bearer 토큰 (필수)
